<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20">
        <ImageView
            android:src="@drawable/rules"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageRules"
            android:layout_margin="15dp"
            android:layout_gravity="left"/>
        <ImageView
            android:src="@drawable/settings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageSettings"
            android:layout_margin="15dp"
            android:layout_gravity="right"/>
    </GridLayout>

    <GridLayout
        android:layout_gravity="center_horizontal"
        android:padding="1dp"
        android:background="#000000"
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:orientation="horizontal"
        android:rowCount="5"
        android:columnCount="5"
        android:layout_margin="5dp">
        <ImageView
            android:id="@+id/cell1"
            style="@style/man"/>
        <ImageView
            android:id="@+id/cell2"
            style="@style/man"/>
        <ImageView
            android:id="@+id/cell3"
            style="@style/man"/>
        <ImageView
            android:id="@+id/cell4"
            style="@style/man"/>
        <ImageView
            android:id="@+id/cell5"
            style="@style/man"/>
        <ImageView
            android:id="@+id/cell6"
            style="@style/man"/>
        <ImageView
            android:id="@+id/cell7"
            style="@style/man"/>
        <ImageView
            android:id="@+id/cell8"
            style="@style/man"/>
        <ImageView
            android:id="@+id/cell9"
            style="@style/man"/>
        <ImageView
            android:id="@+id/cell10"
            style="@style/man"/>
        <ImageView
            android:id="@+id/cell11"
            style="@style/man"/>
        <ImageView
            android:id="@+id/cell12"
            style="@style/man"/>
        <ImageView
            android:id="@+id/cell13"
            style="@style/man"/>
        <ImageView
            android:id="@+id/cell14"
            style="@style/man"/>
        <ImageView
            android:id="@+id/cell15"
            style="@style/man"/>
        <ImageView
            android:id="@+id/cell16"
            style="@style/man"/>
        <ImageView
            android:id="@+id/cell17"
            style="@style/man"/>
        <ImageView
            android:id="@+id/cell18"
            style="@style/man"/>
        <ImageView
            android:id="@+id/cell19"
            style="@style/man"/>
        <ImageView
            android:id="@+id/cell20"
            style="@style/man"/>
        <ImageView
            android:id="@+id/cell21"
            style="@style/man"/>
        <ImageView
            android:id="@+id/cell22"
            style="@style/man"/>
        <ImageView
            android:id="@+id/cell23"
            style="@style/man"/>
        <ImageView
            android:id="@+id/cell24"
            style="@style/man"/>
        <ImageView
            android:id="@+id/cell25"
            style="@style/man"/>
    </GridLayout>

    <Button
        android:id="@+id/buttonNewGame25"
        android:layout_margin="15dp"
        android:text="New Game"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:visibility="invisible" />
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7">
        <ImageView
            android:layout_weight="1"
            android:src="@drawable/restart"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageRestart"
            android:layout_margin="15dp"
            android:layout_gravity="left"/>
        <ImageView
            android:layout_weight="1"
            android:src="@drawable/showsolution"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageShowSolution"
            android:layout_margin="15dp"
            android:layout_gravity="right"/>
    </GridLayout>
</LinearLayout>